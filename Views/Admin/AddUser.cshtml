@model E_banking.Models.Customer
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/form.css" rel="stylesheet" />
<link href="~/Content/backIcon.css" rel="stylesheet" />



<body id="addUserPage">
    <a href=@Url.Action("Index","Admin")><span class="glyphicon glyphicon-chevron-left back" aria-hidden="true"></span></a>
    <div class="loginForm" style="margin-bottom:300px">
        <div class="formCSS">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.acc_Number)
                <div class="form-horizontal" style="display : block;">

                    <h2> Add User </h2>
                    <hr />
                    <label class="control-label col-md-12" style="font-weight: 800; color:white; text-shadow:2px 2px black">@ViewBag.success</label>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.name, "Name", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12 password">
                            @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger control-label col-md-12" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.username, "Username", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12 password">
                            @Html.TextBoxFor(model => model.username, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger control-label col-md-12" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.password, "Password", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12 password">
                            @Html.PasswordFor(model => model.password, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger control-label col-md-12" })
                        <label class="text-danger control-label col-md-12" style="font-weight: 600;">@ViewBag.PasswordError</label>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.gender, "Gender", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12 userDropDownButton">
                            @Html.DropDownListFor(model => model.gender, new List<SelectListItem>
                            {
                                new SelectListItem{ Text = "Female" , Value ="Female"},
                                new SelectListItem{ Text = "Male" , Value ="Male"}
        ,
                            },
                            htmlAttributes: new { @class = "control-label col-md-2 dropList" })
                        </div>

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.email, "Email", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12 password">
                            @Html.TextBoxFor(model => model.email, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger control-label col-md-12" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.balance, "Balance", htmlAttributes: new { @class = "control-label col-md-12" })
                        <div class="col-md-12 password">
                            @Html.TextBoxFor(model => model.balance, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.balance, "", new { @class = "text-danger control-label col-md-12" })
                    </div>

                    <div class="col-md-12">
                        <input type="submit" value="Add" class="btn userButton" onclick="displayAlert()" />
                    </div>
                </div>
            }

        </div>
    </div>
</body>


