@model E_banking.Models.Transcation
@{
    ViewBag.Title = "TransferMoney";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/form.css" rel="stylesheet" />
<link href="~/Content/backIcon.css" rel="stylesheet" />

<body id="transferPage">
    <a href=@Url.Action("Index","User",new { id = @ViewBag.senderId})><span class="glyphicon glyphicon-chevron-left back" aria-hidden="true"></span></a>
    <div class="loginForm" style="margin-bottom:50px">
        <div class="formCSS">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal" style="display : block;">

                <h2> Transfer Money </h2>
                <hr />
                <label class="control-label col-md-12" style="font-weight: 800; color:white; text-shadow:2px 2px black">@ViewBag.success</label>

                <div class="form-group">
                    @Html.LabelFor(model => model.sender_id, "From Account", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12 password">
                        <input type="text" readonly value="@ViewBag.senderId" class="form-control" />
                    </div>
                    @Html.ValidationMessageFor(model => model.sender_id, "", new { @class = "text-danger control-label col-md-12" })

                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.receiver_id, "To Account", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12 password">
                        @Html.TextBoxFor(model => model.receiver_id, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.receiver_id, "", new { @class = "text-danger control-label col-md-12" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.amount, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12 password">
                        @Html.TextBoxFor(model => model.amount, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger control-label col-md-12" })

                </div>
                <label class="text-danger control-label col-md-12" style="font-weight: 600;">@ViewBag.Error</label>

                <div class="col-md-12">
                    <input type="submit" value="Transfer" class="btn userButton" />
                </div>
            </div>
            }

        </div>
    </div>
</body>



